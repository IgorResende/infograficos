<div id="screen" class="section">
  <div class="container">
    <div class="title">
      <h1>
        <%= data.info.screen.title %>
      </h1>
      <p>
        <%= data.info.screen.desc %>
      </p>
    </div>
    <div id="screen-image"></div>
    <div id="screen-title">
      <h3><%= data.info.screen.subtitle %></h3>
      <p><%= data.info.screen.desc2 %></p>
    </div>
    <div id="screen-schema"></div>
    <div id="screen-infos">
      <ul>
        <% data.info.screen.infos.each do |info| %>
        <li>
          <h4><%= info.title %></h4>
          <p><%= info.desc %></p>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>